@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}
<div class="bg-secondary bg-opacity-10 mb-3">
	<div class="container col-xxl-8 px-4 py-5">
		<div class="row align-items-center g-5 py-5">
			<div class="col-12 col-lg-6">
				<h1 class="display-3 lh-lg  mb-3 head-text">
					Blogster
				</h1>
				<p class="lead head-text">
					Blogster is the home to coding blogs covering a vast range of topics like HTML, CSS, JS, C# etc.
				</p>
			</div>
			<div class="col-12 col-lg-6">
				<img src="https://denimdev.com.au/wp-content/uploads/2016/12/viewport1-blog.png"
					 class="d-block mx-lg-auto img-fluid" width="400" />
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-6">
			<h2 class="mb-5 display-4">Blog Posts</h2>
			<div class="mb-5">
				@if (Model.Tags != null && Model.Tags.Any())
				{
					foreach (var tag in Model.Tags)
					{
						<a href="/tags/@tag.Name" class="tag-anchor">
							<span class="badge bg-dark">@tag.Name</span>
						</a>
					}
				}
			</div>
			@if (Model.Blogs != null && Model.Blogs.Any())
			{
				@foreach (var blog in Model.Blogs)
				{
					<div class="mb-5 shadow-lg" style="background-color:aliceblue">
						<img src="@blog.FeaturedImageUrl" alt="@blog.Heading" class="mb-2 d-block img-fluid">
						<div class="px-4 py-4">
							<h2 class="mb-2">@blog.Heading</h2>
							<p>
								Author: @blog.Author
								<br>
								Publication Date: @blog.PublishedDate.ToShortDateString()
							</p>
							<p class="mb-2">@blog.ShortDescription</p>
							<a href="/blog/@blog.UrlHandle" class="btn btn-dark">Read More</a>
						</div>
					</div>
				}
			}
		</div>
	</div>
</div>
